<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign certificates = data[1] | sort: 'date' | reverse %}
  {% for content in certificates %}
    <li class="list-group-item">
      <div class="row">
        <!-- Date column -->
        <div class="col-xs-2 cl-sm-2 col-md-2 text-center date-column">
          {% if content.date %}
            {% assign date = content.date | split: '-' | join: '.' %}
          {% else %}
            {% assign date = '' %}
          {% endif %}
          <span class="badge font-weight-bold danger-color-dark text-uppercase align-middle" style="min-width: 75px">
            {{ date }}
          </span>
        </div>

        <!-- Certificate info -->
        <div class="col-xs-10 cl-sm-10 col-md-10 mt-2 mt-md-0">
          <h6 class="title font-weight-bold ml-1 ml-md-4">
            <a href="{{ content.url | default: '#' }}">{{ content.name }}</a>
          </h6>

          <!-- Issuer -->
          <h6 class="ml-1 ml-md-4" style="font-size: 0.95rem">
            {{ content.issuer }}
          </h6>

          <!-- Optional type (e.g. Online course, Supervised practicum, etc.) -->
          {% if content.type %}
            <h6 class="ml-1 ml-md-4" style="font-size: 0.9rem; font-style: italic; color: #555;">
              {{ content.type }}
            </h6>
          {% endif %}
        </div>
      </div>
    </li>
  {% endfor %}
</ul>
